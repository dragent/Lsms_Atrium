{% extends 'admin_base.html.twig' %}

{% block title %}Admin - Ajout de produit
{% endblock %}
{% block titleBis %}
	<h2 class="text-center text-dark">
		<b>Ajout de produit</b>
	</h2>
{% endblock %}
{% block body %}
	<div class="w-50 mx-auto">
		{{ form_start(form) }}
		{{form_row(form.name)}}
		{{form_row(form.buyPrice)}}
		<div class="d-flex row">
			{{form_row(form.quantity)}}
			{{form_row(form.quantityTrigger)}}
		</div>
		{{form_row(form.quantitiesComponent)}}
		<div class="d-flex  justify-content-center mb-3">
			<i class="bi bi-plus-circle-fill text-success btn fs-4 border border-success rounded-circle mx-5" id="addBtn"></i>
			<i class="bi bi-dash-circle-fill text-danger btn fs-4 border border-danger rounded-circle d-none" id="rmvBtn"></i>
		</div>
		<div class="d-flex row">
			<button type="submit" class="btn btn-dark mr-3 col-3 offset-2" name="action" value="save">Enregistrer</button>
			<button type="submit" class="btn btn-dark mr-3 col-3 offset-2" name="action" value="continue">Enregistrer et continuer</button>
		</div>
		{{ form_end(form)}}
	</div>
{% endblock %}
{% block javascripts %}
	{{ encore_entry_script_tags('addObjects') }}
{% endblock %}
