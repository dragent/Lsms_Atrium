{% extends 'admin_base.html.twig' %}

{% block title %}Admin - Catégorie de soin
{% endblock %}

{% block titleBis %}
	<h2 class="text-center text-dark mt-2">
		<b>Liste des catégories de soin</b>
		<a class="btn btn-dark float-end " href="{{path('app_staff_category_health_add')}}">
			Ajouter une nouvelle catégorie
		</a>
	</h2>
{% endblock %}
{% block body %}
	<div class="table-responsive w-75 mx-auto mt-5">
		<table class="table table-striped table-hover table-borderless text-center sortable">
			<thead class="table-dark">
				<td>Nom de la catégorie</td>
				<td>Supprimer</td>
			</thead>
			<tbody style="cursor: all-scroll;"></tbody>
		</table>
	</div>
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('sortableHealthCategory') }}
{% endblock %}
