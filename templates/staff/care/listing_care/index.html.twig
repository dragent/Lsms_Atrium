{% extends 'admin_base.html.twig' %}

{% block title %}Admin - Soins
{% endblock %}
{% block titleBis %}
	<h2 class="text-center text-dark mt-2">
		<b>Liste des Soins</b>
		<a class="btn btn-dark float-end " href="{{path('app_staff_care_add')}}">
			Ajouter un soin
		</a>
	</h2>
{% endblock %}
{% block body %}
	<div class="table-responsive w-75 mx-auto mt-5">
		<table class="table table-striped table-hover table-borderless text-center">
			<thead class="table-dark">
				<td>Nom du soin</td>
				<td>Type du soin</td>
				<td>Prix</td>
				<td>Voir</td>
				<td>Supprimer</td>
			</thead>
			<tbody>
				{% for care in cares %}
					<tr>
						<td>{{care.name}}</td>
						<td>
							{{care.category.name}}
						</td>
						<td>{{care.price}}</td>
						<td>
							<a href="{{path('app_staff_chamber_modify',{ 'slug':care.slug})}}">
								<i class=" bi bi-pencil-square"></i>
							</a>
						</td>
						<td>
							<a href="{{path('app_staff_chamber_modify',{ 'slug':care.slug})}}">
								<i class="fs-5 bi-trash3-fill"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
