{% extends 'admin_base.html.twig' %}

{% block title %}Admin - Chambre
{% endblock %}
{% block titleBis %}
	<h2 class="text-center text-dark mt-2">
		<b>Liste des Chambres</b>
		<a class="btn btn-dark float-end " href="{{path('app_staff_chamber_add')}}">
			Ajouter une chambre
		</a>
	</h2>
{% endblock %}
{% block body %}
	<div class="table-responsive w-75 mx-auto mt-5">
		<table class="table table-striped table-hover table-borderless text-center">
			<thead class="table-dark">
				<td>Num√©ro de la chambre</td>
				<td>Type de chambre</td>
				<td>Prix de location</td>
				<td>Voir</td>
				<td>Supprimer</td>
			</thead>
			<tbody>
				{% for chamber in chambers %}
					<tr>
						<td>{{chamber.name}}</td>
						<td>
							{% if chamber.type == 0 %}
								Chambre Seule
							{% elseif chamber.type == 1 %}
								Chambre Double
							{% elseif chamber.type == 3 %}
								Chambre Triple
							{% endif %}
						</td>
						<td>{{chamber.price}}</td>
						<td>
							<a href="{{path('app_staff_chamber_modify',{ 'slug':chamber.slug})}}">
								<i class=" bi bi-pencil-square"></i>
							</a>
						</td>
						<td>
							<a href="{{path('app_staff_chamber_delete',{ 'slug':chamber.slug})}}">
								<i class="fs-5 bi-trash3-fill"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
